{
  "default_stop_words": [
    "defmodule",
    "defrecord",
    "defimpl",
    "defexception",
    "defprotocol",
    "defstruct",
    "def.+(.+\\\\.+).+do",
    "^\\s+use\\s+"
  ],

  "skip_files": [
    "test", "application.ex", "endpoint.ex"
  ],

  "custom_stop_words": [
  ],

  "coverage_options": {
    "treat_no_relevant_lines_as_covered": false,
    "output_dir": "cover/",
    "minimum_coverage": 50
  },

  "terminal_options": {
    "file_column_width": 40
  }
}
